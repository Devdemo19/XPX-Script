-- Clean previous
if game.CoreGui:FindFirstChild("XPX_DEMON_X") then
    game.CoreGui.XPX_DEMON_X:Destroy()
end

local Players = game:GetService("Players")
local RunService = game:GetService("RunService")
local LP = Players.LocalPlayer
local Camera = workspace.CurrentCamera
local Mouse = LP:GetMouse()

-- GUI
local GUI = Instance.new("ScreenGui", game.CoreGui)
GUI.Name = "XPX_DEMON_X"

local Main = Instance.new("Frame", GUI)
Main.Size = UDim2.new(0,650,0,450)
Main.Position = UDim2.new(0.5,-325,0.5,-225)
Main.BackgroundColor3 = Color3.fromRGB(15,15,15)
Main.Active = true
Main.Draggable = true
Instance.new("UICorner", Main).CornerRadius = UDim.new(0,20)

-- Intro / Title
local Title = Instance.new("TextLabel", Main)
Title.Size = UDim2.new(1,0,0,50)
Title.Text = "üòà XPX DEMON  |  By demon dev √ó Devdemo19"
Title.Font = Enum.Font.GothamBlack
Title.TextSize = 20
Title.TextColor3 = Color3.fromRGB(170,0,255)
Title.BackgroundTransparency = 1

-- Tabs bar
local Tabs = Instance.new("Frame", Main)
Tabs.Size = UDim2.new(0,140,1,-50)
Tabs.Position = UDim2.new(0,0,0,50)
Tabs.BackgroundColor3 = Color3.fromRGB(20,20,20)

-- Pages container
local Pages = Instance.new("Folder", Main)

-- Helper to create pages
local function NewPage(name)
    local f = Instance.new("Frame", Pages)
    f.Name = name
    f.Size = UDim2.new(1,-140,1,-50)
    f.Position = UDim2.new(0,140,0,50)
    f.BackgroundTransparency = 1
    f.Visible = false
    return f
end

local function TabBtn(txt,y,page)
    local b = Instance.new("TextButton", Tabs)
    b.Size = UDim2.new(1,0,0,45)
    b.Position = UDim2.new(0,0,0,y)
    b.Text = txt
    b.Font = Enum.Font.GothamBold
    b.TextSize = 14
    b.TextColor3 = Color3.new(1,1,1)
    b.BackgroundColor3 = Color3.fromRGB(30,30,30)
    Instance.new("UICorner", b)

    b.MouseButton1Click:Connect(function()
        for _,v in pairs(Pages:GetChildren()) do
            v.Visible = false
        end
        page.Visible = true
    end)
end

-- Pages
local MainPage = NewPage("Main")
local PlayerPage = NewPage("Player")
local VisualPage = NewPage("Visual")
local FunPage = NewPage("Fun")

MainPage.Visible = true

-- Tabs
TabBtn("üè† Main",0,MainPage)
TabBtn("üë§ Player",45,PlayerPage)
TabBtn("üëÅ Visual",90,VisualPage)
TabBtn("üòà Fun",135,FunPage)

-- Button maker
local function Btn(parent,text,y)
    local b = Instance.new("TextButton", parent)
    b.Size = UDim2.new(0,240,0,40)
    b.Position = UDim2.new(0,20,0,y)
    b.Text = text
    b.Font = Enum.Font.GothamBold
    b.TextSize = 13
    b.BackgroundColor3 = Color3.fromRGB(35,35,35)
    b.TextColor3 = Color3.new(1,1,1)
    Instance.new("UICorner", b)
    return b
end

-- ========== MAIN PAGE ==========
Btn(MainPage,"‚ôª Reset Character",20).MouseButton1Click:Connect(function()
    local h = LP.Character:FindFirstChild("Humanoid")
    if h then
        h.WalkSpeed = 16
        h.JumpPower = 50
    end
end)

-- ========== PLAYER PAGE ==========
Btn(PlayerPage,"‚ö° Speed x4",20).MouseButton1Click:Connect(function()
    LP.Character.Humanoid.WalkSpeed = 70
end)

Btn(PlayerPage,"ü¶ò Super Jump",70).MouseButton1Click:Connect(function()
    LP.Character.Humanoid.JumpPower = 140
end)

Btn(PlayerPage,"üïä Fly",120).MouseButton1Click:Connect(function()
    local hrp = LP.Character.HumanoidRootPart
    local bv = Instance.new("BodyVelocity", hrp)
    bv.MaxForce = Vector3.new(1e9,1e9,1e9)
    RunService.RenderStepped:Connect(function()
        bv.Velocity = Camera.CFrame.LookVector * 60
    end)
end)

-- ========== VISUAL PAGE ==========
local ESP = false
Btn(VisualPage,"üëÅ ESP Toggle",20).MouseButton1Click:Connect(function()
    ESP = not ESP
    for _,p in pairs(Players:GetPlayers()) do
        if p ~= LP and p.Character and p.Character:FindFirstChild("Head") then
            if ESP then
                if not p.Character.Head:FindFirstChild("XPX_ESP") then
                    local g = Instance.new("BillboardGui", p.Character.Head)
                    g.Name = "XPX_ESP"
                    g.Size = UDim2.new(0,120,0,40)
                    g.AlwaysOnTop = true
                    local t = Instance.new("TextLabel", g)
                    t.Size = UDim2.new(1,0,1,0)
                    t.Text = p.Name
                    t.BackgroundTransparency = 1
                    t.TextColor3 = Color3.fromRGB(255,0,0)
                end
            else
                if p.Character.Head:FindFirstChild("XPX_ESP") then
                    p.Character.Head.XPX_ESP:Destroy()
                end
            end
        end
    end
end)

-- ========== FUN PAGE ==========
Btn(FunPage,"üß≤ Bring Parts (Local)",20).MouseButton1Click:Connect(function()
    local hrp = LP.Character.HumanoidRootPart
    for _,v in pairs(workspace:GetDescendants()) do
        if v:IsA("BasePart") and not v.Anchored then
            v.CFrame = hrp.CFrame * CFrame.new(math.random(-6,6),0,math.random(-6,6))
        end
    end
end)

Btn(FunPage,"üòà Bang Troll",70).MouseButton1Click:Connect(function()
    RunService.RenderStepped:Connect(function()
        LP.Character.HumanoidRootPart.CFrame *= CFrame.new(0,0,-0.4)
    end)
end)
